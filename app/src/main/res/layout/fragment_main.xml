<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/dark_grey"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:gravity="center"
        android:textSize="40sp"
        android:text="Welcome"
        android:textColor="@color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="30dp" />

    <TextView
        android:id="@+id/section_data_gsm"
        android:gravity="center"
        android:layout_below="@+id/section_label"
        android:textSize="20sp"
        android:text="GSM Data"
        android:textColor="@color/holo_orange_light"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="textViewClicked"
        android:paddingTop="80dp"
        android:paddingBottom="40dp"
        />

    <TextView
        android:id="@+id/section_data_acc"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Acceleration Data"
        android:textColor="@color/holo_orange_light"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="textViewClicked"
        android:layout_below="@+id/section_data_gsm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:paddingBottom="60dp"
        android:isScrollContainer="true"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch"
        android:id="@+id/button_fetch"
        android:layout_below="@+id/section_data_acc"
        android:layout_centerHorizontal="true"
        android:onClick="textViewClicked"
        android:textSize="20sp"
        />


</RelativeLayout>
